import os

# --- Paste the file path ---
video_path = "/content/drive/MyDrive/video.mp4"

# --- Define output paths ---
audio_path = "/content/output_audio.mp3"
transcript_path = "/content/drive/MyDrive/transcript4.txt"

import moviepy.editor as mp

print(f"\nExtracting audio from your video...")
# Check if the file exists before trying to process it
if not os.path.exists(video_path):
    print(f"‚ùå ERROR: The file was not found at the path: {video_path}")
    print("Please double-check the path and filename.")
else:
    try:
        video = mp.VideoFileClip(video_path)
        video.audio.write_audiofile(audio_path, logger=None)
        print(f"‚úÖ Audio extracted successfully.")

        import whisper

        print("\nLoading the Whisper transcription model...")
        model = whisper.load_model("base") # "base" is a good balance of speed and accuracy
        print("‚úÖ Whisper model loaded.")

        print("‚úçÔ∏è Starting transcription... (This can take a while for long videos)")
        result = model.transcribe(audio_path, fp16=False)
        transcript_text = result["text"]
        print("‚úÖ Transcription complete.")

        print(f"\nSaving transcript to: {transcript_path}")
        with open(transcript_path, "w") as f:
            f.write(transcript_text)

        print("\nüéâ All done! Your transcript has been saved to your Google Drive.")
        print("\n--- Transcript Preview ---")
        print(transcript_text[:500] + "...")

    except Exception as e:
        print(f"‚ùå An error occurred during processing: {e}")
